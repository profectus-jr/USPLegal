
<br/><h4>Edição de Tipo de Ítem de Inspeção</h4>
<br/>
<%= nested_form_for @equiptype do |f| %>
  <%= f.label :kind, "Nome" %>
  <%= f.text_field :kind %>

  <%= f.fields_for :checklist_items do |task_form| %>
    <%= task_form.label :question, "Pergunta" %><%= task_form.text_field :question %>
  <% end %>
  <p><%= f.link_to_add "Adicionar nova pergunta", :checklist_items %></p>
  <br/>
  <%= f.submit "Salvar", :class => "btn default-button" %>

<%end%>
