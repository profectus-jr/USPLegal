<div class="search">
  <%= render :partial => 'search' %>
</div>

<i><%= link_to "Nova Inspeção", new_inspection_path %></i>

<table class="table table-striped table-hover">
    <tr>
        <th></th>
        <th>Grupo</th>
        <th>Equipamento</th>
        <th>Localização</th>
        <th>Data da Inspeção</th>
        <th>Estagiário</th>
        <th>Aprovado</th>
        <th></th>
        <th></th>
    </tr>
    <% @inspections.each do |insp| %>
        <tr>
            <td>
               <%= insp.id %>
            </td>
            <td>
               <%= insp.group.try(:name) %>
            </td>
            <td>
                <%= insp.equipment.name %> (<%= insp.equipment.equip_type.kind %>)
            </td>
            <td>
               <%= insp.equipment.building.name %>
            </td>
            <td>
               <%= insp.created_at %>
            </td>
            <td>
                <%= insp.user.name %>
            </td>
            <td>
                <% if (insp.sent == 1)
                    %><p class="text-muted">Enviado</p><% else
                if (insp.approved == 0)
                    %><p class="text-muted">Pendente</p><% end
                if (insp.approved == 1)
                    %><p class="text-muted">Aprovado</p><% end
                if (insp.approved == 2)
                    %><p class="text-muted">Reprovado</p><% end
                end
                %>
            </td>
            <td>
                    <%= link_to "Visualizar", insp  %>

            </td>
            <td>
              <%= link_to "Checklist", edit_inspection_path(:id => insp.id) %>
            </td>
        </tr>
    <% end -%>
</table>
